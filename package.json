{
	"name": "open",
	"type": "module",
	"private": true,
	"version": "0.1.0",
	"description": "ByondXR open monorepo",
	"author": "Pavel Ravits",
	"homepage": "",
	"license": "MIT",
	"keywords": [
		"react",
		"eslint-plugin",
		"recoil"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/prbxr/open.git"
	},
	"engines": {
		"node": ">=18.x",
		"pnpm": ">=8.x"
	},
	"scripts": {
		"build": "pnpm -r build",
		"lint": "eslint packages/**/src --ext .ts,.tsx --cache",
		"format:check": "prettier --check packages/**/**/src --cache",
		"format:write": "prettier --write packages/**/**/src --cache",
		"typecheck": "tsc --noEmit",
		"version": "changeset version",
		"release": "changeset publish",
		"test": "vitest run"
	},
	"preinstall": "npx only-allow pnpm",
	"dependencies": {
		"@testing-library/jest-dom": "^6.1.5",
		"@testing-library/react": "^14.1.2",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.7.3",
		"@vitest/coverage-v8": "^0.34.6",
		"bumpp": "^9.2.0",
		"clean-package": "^2.2.0",
		"eslint": "^8.50.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-prefer-arrow-functions": "^3.1.4",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"eslint-plugin-unused-imports": "^3.0.0",
		"jsdom": "^23.0.1",
		"jsonc-eslint-parser": "^2.4.0",
		"prettier": "^3.0.3",
		"remeda": "^1.27.0",
		"rimraf": "^5.0.5",
		"ts-dedent": "^2.2.0",
		"ts-pattern": "^5.0.5",
		"tsup": "^8.0.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1"
	}
}
